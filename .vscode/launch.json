    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch TypeScript",
            "preLaunchTask": "npm: build",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/src/index.ts",
